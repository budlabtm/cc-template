{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Bazel Build",
            "type": "shell",
            "command": "bazel build //...",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Bazel Test",
            "type": "shell",
            "command": "bazel test --test_output=all //...",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Bazel Sync",
            "type": "shell",
            "command": "bazel run @sync//:refresh_all",
            "problemMatcher": []
        }
    ]
}